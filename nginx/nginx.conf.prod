server {
    listen 443 ssl;

	server_name yarfoosball.ru;
	ssl_certificate /etc/ssl/yarfoosball.ru.crt;
	ssl_certificate_key /etc/ssl/yarfoosball.ru.key;

    location / {
        proxy_pass http://frontend;
    }

    location /api {
        proxy_pass http://backend:8000;
        rewrite ^/api/(.*) /$1 break;
    }
}